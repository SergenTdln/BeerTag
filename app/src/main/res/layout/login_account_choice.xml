<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_choice"
    android:background="@color/colorPrimary"
    tools:context=".activities.LoginChoiceActivity">

    <ImageView
        android:id="@+id/splashIcon"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/account_choice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Bonjour :)"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/splashIcon"/>

    <TextView
        android:id="@+id/account_choice_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Vous avez un compte utilisateur et partenaire"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/account_choice_title"/>

    <TextView
        android:id="@+id/account_choice_sub_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Veuillez choisir l'interface désirée ci-dessous"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/account_choice_sub_title"/>

    <Button
        android:id="@+id/button_go_to_user"
        android:layout_width="wrap_content"
        android:minWidth="250dp"
        android:layout_height="wrap_content"
        android:minHeight="55dp"
        android:textColor="@color/white"
        android:background="@android:color/holo_blue_dark"
        android:text="Se connecter en tant qu'user"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/account_choice_sub_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_go_to_admin"
        android:layout_width="wrap_content"
        android:minWidth="250dp"
        android:layout_height="wrap_content"
        android:minHeight="55dp"
        android:textColor="@color/white"
        android:background="@android:color/holo_orange_dark"
        android:text="Se connecter en tant qu'admin"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/button_go_to_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>